{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@doai/shared": ["packages/shared/src/index.ts"],
      "@doai/shared/*": ["packages/shared/src/*"],
      "@doai/ui": ["packages/ui/src/index.ts"],
      "@doai/ui/*": ["packages/ui/src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}