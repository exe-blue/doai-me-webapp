{
  "name": "doai-me-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev:bot": "npm run dev --workspace=apps/desktop-bot",
    "dev:web": "npm run dev --workspace=apps/web-client",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:all": "npm run build --workspaces",
    "lint:all": "npm run lint --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
