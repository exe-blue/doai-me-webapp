{
  "name": "doai-device-farm",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:agent": "npm run start --workspace=apps/desktop-agent",
    "storybook": "npm run storybook --workspace=packages/ui",
    "build:storybook": "npm run build-storybook --workspace=packages/ui",
    "build": "npm run build --workspaces",
    "lint": "eslint .",
    "lint:imports": "node scripts/lint-imports.js",
    "lint:all": "npm run lint && npm run lint:imports",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint:imports",
    "prepare": "husky || true",
    "clean": "npx rimraf node_modules apps/*/node_modules packages/*/node_modules infra/*/node_modules",
    "sb": "npm run storybook --workspace=@packages/ui",
    
    "build:types": "npm run build --workspace=packages/worker-types",
    "build:core": "npm run build --workspace=packages/worker-core",
    "build:youtube-bot": "npm run build --workspace=apps/youtube-bot",
    "build:agent": "npm run build --workspace=apps/desktop-agent",
    "build:workers": "npm run build:types && npm run build:core && npm run build:youtube-bot",
    
    "dev:youtube-bot": "npm run dev --workspace=apps/youtube-bot",
    "start:youtube-bot": "npm run start --workspace=apps/youtube-bot",
    
    "typecheck:types": "npm run typecheck --workspace=packages/worker-types",
    "typecheck:core": "npm run typecheck --workspace=packages/worker-core",
    "typecheck:youtube-bot": "npm run typecheck --workspace=apps/youtube-bot",
    "typecheck:workers": "npm run typecheck:types && npm run typecheck:core && npm run typecheck:youtube-bot",
    
    "download:minicap": "node scripts/download-minicap.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "2.8.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "node scripts/lint-imports.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
