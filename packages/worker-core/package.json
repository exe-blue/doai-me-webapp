{
  "name": "@doai/worker-core",
  "version": "1.0.0",
  "description": "DoAi.Me Worker Core - ADB 제어 및 디바이스 관리 핵심 라이브러리",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./logger": {
      "types": "./dist/Logger.d.ts",
      "import": "./dist/Logger.js",
      "require": "./dist/Logger.js"
    },
    "./adb": {
      "types": "./dist/AdbController.d.ts",
      "import": "./dist/AdbController.js",
      "require": "./dist/AdbController.js"
    },
    "./device": {
      "types": "./dist/DeviceManager.d.ts",
      "import": "./dist/DeviceManager.js",
      "require": "./dist/DeviceManager.js"
    },
    "./human-simulator": {
      "types": "./dist/HumanSimulator.d.ts",
      "import": "./dist/HumanSimulator.js",
      "require": "./dist/HumanSimulator.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@devicefarmer/adbkit": "^3.2.6",
    "@doai/worker-types": "^1.0.0",
    "dotenv": "^16.4.1",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "doai",
    "worker",
    "adb",
    "device-management",
    "automation"
  ],
  "license": "MIT"
}
