{
  "name": "@doai/shared",
  "version": "1.0.0",
  "description": "DoAi.Me 공통 타입, API 스펙, Socket 이벤트 정의",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js",
      "require": "./dist/api.js"
    },
    "./socket": {
      "types": "./dist/socket.d.ts",
      "import": "./dist/socket.js",
      "require": "./dist/socket.js"
    },
    "./queue": {
      "types": "./dist/queue.d.ts",
      "import": "./dist/queue.js",
      "require": "./dist/queue.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js",
      "require": "./dist/constants.js"
    },
    "./database": {
      "types": "./dist/database.d.ts",
      "import": "./dist/database.js",
      "require": "./dist/database.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "typesVersions": {
    "*": {
      "database": ["dist/database.d.ts"],
      "types": ["dist/types.d.ts"],
      "api": ["dist/api.d.ts"],
      "socket": ["dist/socket.d.ts"],
      "queue": ["dist/queue.d.ts"],
      "constants": ["dist/constants.d.ts"]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT"
}
