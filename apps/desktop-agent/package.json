{
  "name": "doai-agent",
  "version": "1.2.3",
  "description": "DOAI Device Control Agent",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "postbuild": "node -e \"const fs=require('fs');const p=require('path');['src/preload.js','src/renderer/index.html'].forEach(f=>{const d=f==='src/renderer/index.html'?'dist/index.html':'dist/'+p.basename(f);fs.copyFileSync(f,d);})\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prebuild:win": "tsc",
    "build:win": "electron-builder --win",
    "prebuild:mac": "tsc",
    "build:mac": "electron-builder --mac",
    "prebuild:linux": "tsc",
    "build:linux": "electron-builder --linux",
    "build:dir": "tsc && electron-builder --dir",
    "predist": "node scripts/verify-resources.js",
    "dist": "tsc && electron-builder",
    "predist:win": "node scripts/verify-resources.js",
    "dist:win": "tsc && electron-builder --win",
    "predist:mac": "node scripts/verify-resources.js",
    "dist:mac": "tsc && electron-builder --mac",
    "predist:linux": "node scripts/verify-resources.js",
    "dist:linux": "tsc && electron-builder --linux",
    "release": "tsc && electron-builder --publish always",
    "release:win": "tsc && electron-builder --win --publish always",
    "release:mac": "tsc && electron-builder --mac --publish always",
    "clean": "rimraf dist build",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@doai/shared": "file:../../packages/shared",
    "bullmq": "^5.0.0",
    "dotenv": "^16.4.1",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.3.9",
    "ioredis": "^5.3.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.7.4",
    "systeminformation": "^5.21.22"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "cross-env": "^7.0.3",
    "electron": "40.1.0",
    "electron-builder": "^24.13.2",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doai-me/doai-agent-releases.git"
  },
  "author": "DOAI Inc. <support@doai.me>",
  "license": "MIT",
  "build": {
    "extends": "electron-builder.yml"
  }
}
